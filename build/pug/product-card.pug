  - var pageKeywords = ''
  - var page = "product-card"
  - var headerTheme = ""


block ogProperty

block schema

block content
  .main-wrapper.pos-relative 
    +b.carousel-box._product-card
      +e.AMP-CAROUSEL.slider(id="productCardCarousel", width="300", height="300", layout="responsive", type="slides", role="region", aria-label="Carousel", on="slideChange:productCardCarouselDots.toggle(index=event.index, value=true)", autoplay="", loop="", delay="3000")._full-height._full-width  
        +e.DIV.picture-wrapper.pos-relative
          +e.AMP-IMG.picture(src="img/product-card/product-card-1-1.webp", alt="Product Alt", layout="fill")
            amp-img(fallback, src="img/product-card/product-card-1-1.jpg", alt="Product Alt", layout="fill")
          +e.info.display-f  
            +e.info-col._left
              +b.SPAN.whatsapp-icon.display-b
            +e.info-col
              +e.H2.info-title Polaroid sunglasses new design 2021
              +e.P.info-desc.display-f.align-i-c Stylish Black Sunglasses, $49.99
        +e.DIV.picture-wrapper.pos-relative
          +e.AMP-IMG.picture(src="img/product-card/product-card-1-2.webp", alt="Product Alt", layout="fill")
            amp-img(fallback, src="img/product-card/product-card-1-2.jpg", alt="Product Alt", layout="fill")
          +e.info.display-f  
            +e.info-col._left
              +b.SPAN.whatsapp-icon.display-b
            +e.info-col
              +e.H2.info-title New sunglasses 
              +e.P.info-desc.display-f.align-i-c New glasses for the cowboy, $80.99
        +e.DIV.picture-wrapper.pos-relative
          +e.AMP-IMG.picture(src="img/product-card/product-card-1-3.webp", alt="Product Alt", layout="fill")
            amp-img(fallback, src="img/product-card/product-card-1-3.jpg", alt="Product Alt", layout="fill")
          +e.info.display-f  
            +e.info-col._left
              +b.SPAN.whatsapp-icon.display-b
            +e.info-col
              +e.H2.info-title Polaroid sunglasses new design 2021
              +e.P.info-desc.display-f.align-i-c Glasses on the beach, $50
        +e.DIV.picture-wrapper.pos-relative
          +e.AMP-IMG.picture(src="img/product-card/product-card-1-4.webp", alt="Product Alt", layout="fill")
            amp-img(fallback, src="img/product-card/product-card-1-4.jpg", alt="Product Alt", layout="fill")
          +e.info.display-f  
            +e.info-col._left
              +b.SPAN.whatsapp-icon.display-b
            +e.info-col._right 
              +e.H2.info-title Sunglasses are free for everyone
              +e.P.info-desc.display-f.align-i-c Glasses with colored glasses for the most stylish and fashionable, $200

      +e.AMP-SELECTOR.dots.display-f.flex-wrap-w.justify-c-c(id="productCardCarouselDots", on="select:productCardCarousel.goToSlide(index=event.targetOption)", aria-label="Slide selection")
        +e.BUTTON.dot.clear-btn.pos-relative(option="0", selected="", aria-label="Slide 1") 
        +e.BUTTON.dot.clear-btn.pos-relative(option="1", aria-label="Slide 2")
        +e.BUTTON.dot.clear-btn.pos-relative(option="2", aria-label="Slide 3") 
        +e.BUTTON.dot.clear-btn.pos-relative(option="3", aria-label="Slide 4") 

    // begin Message-box
    +b.message-box._product-card
      form(target="_top", method="get", action="https://wa.me/98411436000")
        +input-box({type: "text", name:"text" , placeholder:"Type you message here", button: "messageBoxSendIcon", required: "required"})._button
        input(type="hidden", value="98411436000")
    // end Message-box
    +b.A.sandwich._product-card(href="locations.html")
      +e.SPAN.sandwich-bar
